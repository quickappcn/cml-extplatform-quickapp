<template>
  <swiper index="{{current}}" autoplay="{{autoplay}}" interval="{{interval}}" indicator="{{indicatorDots}}"
    loop="{{circular}}" onchange="swiperChange">
    <slot></slot>
  </swiper>
</template>
<script>
  class CCarousel implements CCarouselInterface {
    data = {}
    props = {
      autoplay: {
        type: Boolean,
        default: false
      },
      interval: {
        type: Number,
        default: 5000
      },
      current: {
        type: Number,
        default: 0
      },
      indicatorDots: {
        type: Boolean,
        default: false
      },
      indicatorColor: {
        type: String,
        default: '#cccccc'
      },
      indicatorActiveColor: {
        type: String,
        default: '#000000'
      },
      circular: {
        type: Boolean,
        default: false
      }
    }
    computed = {}
    mounted() { }
    methods = {
      swiperChange(e) {
        if (e.index !== undefined) {
          this.$cmlEmit('change', {
            current: e.index
          })
        }
      }
    }
  }
  export default new CCarousel();
</script>

